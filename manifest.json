{
  "manifest_version": 3,
  "name": "AI Mode Blocker",
  "version": "1.4",
  "description": "Hides AI Mode responses in Google Search results.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": [
    "https://www.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "AI Search Modifier",
    "default_popup": "popup.html"
  }
}
